{
    "manifest_version": 3,
    "name": "Google Meet ↔ Home Assistant",
    "version": "0.2.3",
    "description": "Updates a Home Assistant entity state with the status of your Google Meet calls",
    "author": "based on Colin O'Dell <colinodell@gmail.com> work, by Renan Brasilio <renanfamous@gmail.com>",
    "homepage_url": "https://github.com/colinodell/google-meet-hass-extension",
    "action": {
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_title": "Google Meet ↔ Home Assistant",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "*://*/api/states/*",
        "https://www.google.com/*"
    ]
}
